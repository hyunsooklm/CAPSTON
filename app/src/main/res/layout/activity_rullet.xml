<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDE8"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background__header"
        android:padding="10dp">


        <ImageView
            android:layout_width="148dp"
            android:layout_height="121dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/roulette"

            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="9dp" />

        <TextView
            android:layout_width="158dp"
            android:layout_height="104dp"
            android:fontFamily="@font/bmhannapro"
            android:gravity="center"
            android:text="돌려 돌려 돌림판"
            android:textSize="40sp"

            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="-14dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:fontFamily="@font/kyobohandwriting"
            android:text="오늘의 당첨자는 누구??"
            android:textSize="18dp"

            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="101dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/sharp_label_black_18dp2" />

    <RelativeLayout
        android:id="@+id/layoutRoulette"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/background_roulette"
        android:orientation="vertical">

        <!--        <Button-->
        <!--            android:id="@+id/btn_rotate"-->
        <!--            android:layout_width="65dp"-->
        <!--            android:layout_height="65dp"-->
        <!--            android:text="돌리기"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:background="@drawable/button_selector"/>-->

    </RelativeLayout>

    <Button
        android:id="@+id/btnRotate"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_login"
        android:text="돌리기"
        android:textColor="#592DBF"
        android:fontFamily="@font/kyobohandwriting"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="당첨 : "
        android:fontFamily="@font/bmhannapro"
        android:textSize="32sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/em_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>